### BEGIN INIT INFO
# Provides:          dcm4chee
# Required-Start:    $all mysql
# Required-Stop:     $all
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Start dcm4chee
# Description:       
### END INIT INFO

#!/bin/sh -e
#
# dcm4chee init.d startup script
#

NAME="dcm4chee"
SELF=$(cd $(dirname $0); pwd -P)/$(basename $0)
PIDFILE=/var/run/$NAME
RUN_FROM=/opt/dcm4chee-2.17.1-mysql/bin
DAEMON="$RUN_FROM/run.sh"
[ -x /usr/bin/java ] || exit 0
[ -e "$DAEMON" ] || exit 0
. /lib/lsb/init-functions


running_pid()
{
    # Check if a given process pid's cmdline matches a given name
    pid=$1
    name=$2
    [ -z "$pid" ] && return 1 
    [ ! -d /proc/$pid ] &&  return 1
    cmd=`cat /proc/$pid/cmdline | tr "\000" "\n"|head -n 1 |cut -d : -f 1`
    # Is this the expected child?
    [ "$cmd" != "$name" ] &&  return 1
    return 0
}

running()
{
# Check if the process is running looking at /proc
# (works for all users)
    # No pidfile, probably no daemon present
    [ ! -f "$PIDFILE" ] && return 1
    # Obtain the pid and check it against the binary name
    pid=`cat $PIDFILE`
    running_pid $pid java || return 1
    return 0
}


d_start() {
    if start-stop-daemon --background --start --quiet \
                    --chuid pacs --exec $DAEMON
    then
	sleep 1
	ps aux | grep name=dcm4chee | grep -v grep | awk '{print $2}' > $PIDFILE
        log_end_msg 0
    else
        log_end_msg 1
    fi
}

d_stop() {
    if start-stop-daemon --stop --quiet --pidfile $PIDFILE --user pacs
    then
    	if [ -e $PIDFILE ]
	  then rm $PIDFILE
	fi
	log_end_msg 0
    else
	log_warning_msg "$NAME was not running"
    fi
}


case "$1" in
  start)
	log_daemon_msg "Starting $NAME"
	if running; then
	       log_warning_msg "$NAME is already running"
	       exit 0
	fi
	rm -f $PIDFILE
	d_start
	;;
  stop)
	log_daemon_msg "Stopping $NAME"
	d_stop
	;;
  restart)
	log_daemon_msg "Restarting $NAME"
	set +e; $SELF stop; set -e
        $SELF start 
        ;;
  status)
	status_of_proc $DAEMON $NAME && exit 0 || exit $?
	;;
  *)
	echo "Usage: /etc/init.d/`basename $0` {start|stop|restart|status}"
	exit 1
esac
